void Register(){
    system("cls");
   while(true){

        if(pemberhentian == 1){
            break;
        }
        cout << "enter new user-id: ";
        cin >> user[i];
        i++;
        cout << "enter new password : ";
        cin >> pass[j];
        j++;
        cout << "Create Account (y/n) : ";
        cin >> jawaban;
        if(jawaban == 'y'){
        pemberhentian+=1;
         }else{
            i = i - i;
            j = j - j;
            system("cls");
         }
    }
    cout << endl << "Account has been created ! " << endl;
    load_Register(); cout << endl;
    system("cls");
    login();
}


