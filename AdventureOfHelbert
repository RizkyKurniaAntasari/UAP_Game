void startgame(){
    system("cls");
    cout << "game started !";

}

//Menu login dengan Boolean
void login(){
        cout << " \033[1m Menu Login \033[0m" << endl;
        cout << "enter user-id: ";
        cin >> name;
        cout << "enter password : ";
        cin >> password;
        cout << endl;
        for(int a=0;a<10;a++){
        if(name == user[a] && password == pass[a])
        {   
            global();
            startgame();
            found = true;
            break;
        }
        if(!found)
        {   
            name.clear();password = int();
            system("cls");
            cout << "Wrong Password or User-ID !" << endl;
            login();
        }
        }//startgame();

}

